#/bin/bash

str=$(sensors | awk '{print $3}' | sed 's/adapter$//' | cut -c 2- | awk '{printf $0}')

arr=$(echo $str | tr ".0" "\n")
for x in $arr
    do
        let sum+=$x  
    done

let sum/=4
outside=$(weather-report 49534 | grep -oP '(?=Temperature).*F' | cut -f2- -d':' | cut -c 2-3)°F
echo -n $sum°C - OUT '' $outside


if [[ $sum -gt 70 ]]; then
    print "#FF0000\n"
    exit 33
fi

if [[$outside -gt 100 ]]; then
    print "#FF0000\n"
    exit 33
fi