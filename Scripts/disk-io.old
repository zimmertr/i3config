#! /bin/bash

read1=$(iostat 1 1 | awk '{print $3}' | tail -n 2 | head -n 1 | cut -c -4)
write1=$(iostat 1 1 | awk '{print $4}' | tail -n 2 | head -n 1 | cut -c -4)

sleep 1

read2=$(iostat 1 1 | awk '{print $3}' | tail -n 2 | head -n 1 | cut -c -4)
write2=$(iostat 1 1 | awk '{print $4}' | tail -n 2 | head -n 1 | cut -c -4)

read=($read1 += $read2 / 2)
write=($write1 += $write2 / 2)

echo -n $read
echo -n K/
echo -n $write
echo -n K
